{
    // python
    "python.languageServer": "Microsoft",
    "python.pythonPath": "/usr/local/anaconda3/envs/GPM4/bin/python",
    "terminal.integrated.inheritEnv": false,
    "python.terminal.activateEnvironment": false,
    "python.linting.flake8Enabled": true,
    "python.formatting.provider": "yapf",
    "python.linting.flake8Args": [
        "--max-line-length=120"
    ],
    "python.formatting.yapfArgs": [
        "--style={ based_on_style: google, column_limit: 120 }"
    ],
    "python.linting.pylintEnabled": false,
    "python.sortImports.path": "/usr/local/anaconda3/envs/GPM4/bin/python",
    "python.sortImports.args": [
        "--multi-line=3",
        "--trailing-comma",
        "--force-grid-wrap=0",
        "--use-parentheses",
        "--line-width=79",
    ],
    "[python]": {
        "editor.defaultFormatter": "ms-python.python",
        "editor.formatOnPaste": false
    },
    //
    "matlab.mlintpath": "/Applications/MATLAB_R2020a.app/bin/maci64/mlint",
    //
    "kite.showWelcomeNotificationOnStartup": false,
    "files.associations": {
        "stdlib.h": "c",
        "rgba320x240.h": "c",
        "__hash_table": "c",
        "__split_buffer": "c",
        "array": "c",
        "bitset": "c",
        "initializer_list": "c",
        "iterator": "c",
        "string": "c",
        "string_view": "c",
        "unordered_map": "c",
        "utility": "c",
        "vector": "c"
    },
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/*_org_*.c": true,
        "**/file_operations.c": false
    },
    "explorerExclude.backup": null,
    // Controls whether inactive preprocessor blocks are colored differently than active code. This setting has no effect if IntelliSense is disabled or if using the Default High Contrast theme.
    "C_Cpp.dimInactiveRegions": true,
    "C_Cpp.inactiveRegionBackgroundColor": "",
    "C_Cpp.inactiveRegionForegroundColor": "",
    "C_Cpp.inactiveRegionOpacity": 0.55
}